{
	"configurations": [
		{
			"name": "Run project",
			"type": "python",
			"request": "launch",
			"program": "friendhub/src/main.py",
			"console": "integratedTerminal",
			"justMyCode": false,
			"cwd": "${workspaceFolder}",
			"env": {
				"PYTHONPATH": "friendhub/src;."
			},
			"args": [
				"-Xfrozen_modules=off"
			]
		},
		{
			"name": "Make translations",
			"type": "python",
			"request": "launch",
			"program": "translate/main.py",
			"console": "integratedTerminal",
			"cwd": "${workspaceFolder}",
			"justMyCode": true
		},
		{
			"name": "Run tests",
			"type": "python",
			"request": "launch",
			"console": "integratedTerminal",
			"cwd": "${workspaceFolder}",
			"module": "pytest",
			"args": [
				"-v",
				"friendhub/tests",
				// "-m db",
				"-m unit"
			],
			"env": {
				"PYTHONPATH": "friendhub/src"
			},
			"justMyCode": false
		},
		{
			"name": "Profile",
			"type": "python",
			"request": "launch",
			"program": "friendhub/src/main.py",
			"console": "integratedTerminal",
			"justMyCode": true,
			"cwd": "${workspaceFolder}",
			"env": {
				"PYTHONPATH": "friendhub/src;.",
				"PROFILE": ""
			}
		}
	]
}
